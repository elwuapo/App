<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Layout_app"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Actividad">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/blanco"
        app:itemIconTint="@color/rojo"
        app:itemTextColor="@color/rojo"
        app:menu="@menu/navbar_menu" />

    <fragment
        android:id="@+id/fragment_contenedor"
        android:name="com.example.app.InicioFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <!-- SI REEMPLAZO EL NAME CON UN STRING SE CAE LA APP :C -->


</RelativeLayout>